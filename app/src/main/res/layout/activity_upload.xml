<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">

    <ImageView
        android:id="@+id/imgPic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_photo_camera_black_24dp" />

    <Button
        android:id="@+id/btnPilih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:text="Choose"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/etJudul"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etDesc"
        android:layout_alignStart="@+id/etDesc"
        android:layout_below="@+id/btnPilih"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="title..."
        android:inputType="textPersonName"
        android:backgroundTint="@color/colorAccent"/>

    <EditText
        android:id="@+id/etDesc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etJudul"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="description..."
        android:inputType="textMultiLine"
        android:backgroundTint="@color/colorAccent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etDesc"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="17dp"
        android:tint="#fff"
        android:clickable="true"
        android:src="@drawable/ic_check_black_24dp" />

</RelativeLayout>